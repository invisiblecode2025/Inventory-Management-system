<UserControl x:Class="Inventory_Management.Views.HeaderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     
             Height="30">
    <Grid Background="#FF2D2D30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Application Title" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top"  HorizontalAlignment="Right">
           
        </StackPanel>
    </Grid>
</UserControl>
